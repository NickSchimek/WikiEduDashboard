.language-picker	

  .Select
  	width 100px	
  	border none

  .Select.is-open
    z-index 1 !important

  img
  	width 22px

  .Select-control
  	background none
  	border none
  	padding 0px
  	padding-top 5px

  .Select-control:hover
  	box-shadow none

  .is-focused:not(.is-open) > .Select-control
  	box-shadow none

  .Select-placeholder
  	position absolute
  	top -5px

  .Select-menu 
    position fixed !important
    width 150px !important
    border 1px solid #cccccc
    background-color #e6e6e6
    margin-right 5px

  .Select-menu-outer
    margin-top 10px
    border none
    box-shadow none

  .Select-option 
    &:first-child
      padding 10px 0px 10px 10px
      border-bottom 1px solid #cccccc

  .Select-arrow-zone
  	display none